<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#2E86C1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MI PERFIL"
            android:textColor="@color/ColorTres"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/ib_edit_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_edit_24" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_vertical"
            android:elevation="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_f1"
                android:background="@drawable/ic_baseline_person_outline_24"
                android:clickable="true"
                android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_f1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start"
                android:hint="Nombre"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/ColorTres"
                android:textSize="25dp" />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#1A5276"
        android:gravity="start"
        android:text="DATOS"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:text="Email"
        android:paddingStart="20dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textColor="#1B4F72"
        android:textSize="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:id="@+id/tv_mail_f1"
        android:text="Email"
        android:paddingStart="20dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="#1A5276"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:text="Cumpleaños"
        android:paddingStart="20dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textColor="#1B4F72"
        android:textSize="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:id="@+id/tv_dob_f1"
        android:text="Cumpleaños"
        android:paddingStart="20dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="#1A5276"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:text="Teléfono"
        android:paddingStart="20dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textColor="#1B4F72"
        android:textSize="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:id="@+id/tv_mobile_f1"
        android:text="Teléfono"
        android:paddingStart="20dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="#1A5276"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>

